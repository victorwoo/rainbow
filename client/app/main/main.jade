.container
  .row
    .col-lg-12
      div
        | watching model:
        .button(ngf-select='', ng-model='vm.files') Upload using model $watch
        label
          | rainbow count:
          input(type='number', min='1', max='16' ng-model='vm.rainbowCount')
        |     Image thumbnail:
        img(ngf-src='vm.files[0]')
  .row
    .col-lg-12
      | rainbows:
      div(ng-repeat='rainbow in vm.rainbows', style='background: {{rainbow}}; height: 32px;')

  .row
    .col-lg-12
      h1.page-header Features:
      ul.nav.nav-tabs.nav-stacked.col-md-4.col-lg-4.col-sm-6(ng-repeat='thing in vm.awesomeThings')
        li
          a(href='#', tooltip='{{thing.info}}')
            | {{thing.name}}

